<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>New Grocery Item</h1>

      <form action="/groceries/create" method="post">
        <div class="form-group">
          <label for="title">Grocery Item</label>
          <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
        </div>
        
        <select class="form-control" name="purchased">
            <option value='Purchased'>Purchased</option>
            <option value='Not purchased'>Not purchased</option>
          </select>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
