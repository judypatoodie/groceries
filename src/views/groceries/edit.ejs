<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>Edit Grocery Item</h1>

      <form action="/groceries/<%= grocery.id %>/update" method="post">
        <div class="form-group">
          <label for="title">Grocery title</label>

          <input value="<%= grocery.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
        </div>

        <select class="form-control" name="purchased" >
            <option value='Not purchased' >Not purchased</option>
            <option value='Purchased'>Purchased</option>
          </select>
          <br>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
