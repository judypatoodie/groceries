<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>Edit Grocery Item</h1>

      <form action="/groceries/<%= grocery.id %>/update" method="post">
        <div class="form-group">
          <label for="title">Grocery title</label>

          <input value="<%= grocery.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
        </div>
        <div class="form-group">
          <label for="description">Description</label>

          <textarea rows="4" class="form-control" name="description" placeholder="Enter Description"><%= grocery.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
